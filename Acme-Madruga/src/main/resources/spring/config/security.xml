<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd		
        http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.2.xsd
    ">

	<!-- Security infrastructure -->

	<bean id="loginService" class="security.LoginService" />

	<bean id="passwordEncoder"
		class="org.springframework.security.authentication.encoding.Md5PasswordEncoder" />

	<!-- Access control -->

	<security:http auto-config="true" use-expressions="true">
		<security:intercept-url pattern="/" access="permitAll" />

		<security:intercept-url pattern="/favicon.ico"
			access="permitAll" />
		<security:intercept-url pattern="/images/**"
			access="permitAll" />
		<security:intercept-url pattern="/scripts/**"
			access="permitAll" />
		<security:intercept-url pattern="/styles/**"
			access="permitAll" />
		
		<security:intercept-url access="permitAll" pattern="/law/terms-conditions.do"/>
		
		<security:intercept-url pattern="/views/misc/index.jsp"
			access="permitAll" />

		<security:intercept-url access="permitAll"
			pattern="/security/login.do" />
		<security:intercept-url pattern="/security/loginFailure.do"
			access="permitAll" />

		<security:intercept-url pattern="/welcome/index.do"
			access="permitAll" />

		<security:intercept-url pattern="/brotherhood/list.do"
			access="permitAll" />
		<security:intercept-url pattern="/brotherhood/display.do"
			access="permitAll" />

		<security:intercept-url pattern="/administrator/**"
			access="hasRole('ADMIN')" />
			
		<security:intercept-url pattern="/systemConfig/administrator/**"
			access="hasRole('ADMIN')" />

		<security:intercept-url pattern="/customer/action-1.do"
			access="hasRole('CUSTOMER')" />
		<security:intercept-url pattern="/customer/action-2.do"
			access="hasRole('CUSTOMER')" />

		<security:intercept-url pattern="/message/**"
			access="isAuthenticated()" />

		<security:intercept-url pattern="/box/**"
			access="isAuthenticated()" />

		<security:intercept-url pattern="/area/**"
			access="hasRole('ADMIN')" />

		<security:intercept-url pattern="/position/**"
			access="hasRole('ADMIN')" />

		<security:intercept-url pattern="/member/display.do"
			access="permitAll" />

		<security:intercept-url pattern="/procession/display.do"
			access="permitAll" />

		<security:intercept-url pattern="/float/display.do"
			access="permitAll" />

		<security:intercept-url pattern="/actor/edit.do"
			access="hasAnyRole('ADMIN','MEMBER')" />

		<security:intercept-url pattern="/actor/editBrotherhood.do"
			access="hasAnyRole('BROTHERHOOD')" />

		<security:intercept-url pattern="/actor/display.do"
			access="hasAnyRole('ADMIN','MEMBER','BROTHERHOOD')" />

		<security:intercept-url pattern="/actor/displayBrotherhood.do"
			access="hasAnyRole('ADMIN','MEMBER','BROTHERHOOD')" />

		<security:intercept-url pattern="/socialProfile/**"
			access="hasAnyRole('ADMIN','MEMBER','BROTHERHOOD')" />
		<security:intercept-url pattern="/request/member/**"
			access="isAuthenticated()" />

		<security:intercept-url pattern="/actor/registerAdministrator.do"
			access="hasRole('ADMIN')" />

		<security:intercept-url pattern="/request/brotherhood/**"
			access="hasRole('BROTHERHOOD')" />
		<security:intercept-url pattern="/procession/brotherhood/**"
			access="hasRole('BROTHERHOOD')" />
		<security:intercept-url pattern="/procession/member/list.do"
			access="hasRole('MEMBER')" />
		<security:intercept-url pattern="/enrolment/member/**"
			access="hasRole('MEMBER')" />
		<security:intercept-url pattern="/enrolment/brotherhood/**"
			access="hasRole('BROTHERHOOD')" />
		<security:intercept-url pattern="/brotherhood/member/**"
			access="hasRole('MEMBER')" />
		<security:intercept-url pattern="/finder/member/**"
			access="hasRole('MEMBER')" />

		<security:intercept-url pattern="/actor/register.do"
			access="isAnonymous()" />
		<security:intercept-url pattern="/actor/registerBrotherhood.do"
			access="isAnonymous()" />
		<security:intercept-url pattern="/float/brotherhood/**"
			access="hasRole('BROTHERHOOD')" />
		


		<security:intercept-url pattern="/**"
			access="hasRole('NONE')" />


		<security:form-login login-page="/security/login.do"
			password-parameter="password" username-parameter="username"
			authentication-failure-url="/security/loginFailure.do" />

		<security:logout logout-success-url="/"
			invalidate-session="true" />
	</security:http>


</beans>